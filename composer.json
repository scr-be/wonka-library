{
    "name"        : "scr-be/wonka-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://scr.be/wonka-library/home",
    "description" : "Collection of framework-agnostic utilities and classes.",
    "support" : {
        "email"  : "rmf@scr.be",
        "source" : "https://scr.be/wonka-library/git",
        "issues" : "https://scr.be/wonka-library/issues",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"    : [
        "wonka-library", "scribe-wonka-library", "library", "scr.be", "scribe", "scribenet", "scribe-softwade", "scribe-services"
    ],
    "authors" : [
        {
            "name"     : "Rob Frawley 2nd",
            "email"    : "rmf@scr.be",
            "homepage" : "https://scr.be/rmf",
            "role"     : "Project Lead"
        }
    ],
    "require" : {
        "php" : ">=5.6.4,~5.6|~7.0"
    },
    "require-dev" : {
        "phpunit/phpunit"             : "~5.0",
        "sensiolabs/security-checker" : "~3.0",
        "scrutinizer/ocular"          : "~1.1",
        "satooshi/php-coveralls"      : "~0.7@dev"
    },
    "conflict" : {
        "scribe/mantle-bundle" : "<2.1.0"
    },
    "autoload" : {
        "psr-4" : { 
            "Scribe\\Wonka\\" : "lib/"
        },
        "files" : [ 
            "stub/functions.php" 
        ]
    },
    "autoload-dev" : {
        "psr-4" : {
            "Scribe\\Wonka\\Tests\\" : "tests/"
        }
    },
    "config": {
        "bin-dir"           : "bin",
        "minimum-stability" : "dev"
    },
    "extra" : {
        "branch-alias" : {
            "dev-master" : "0.1.x-dev"
        }
    }
}
